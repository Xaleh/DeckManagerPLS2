<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyRadioButtonYellow" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlActivated">@color/colorCityYellow</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="MyRadioButtonBlue" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlActivated">@color/colorCityBlue</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="MyRadioButtonBlack" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlActivated">@color/colorCityBlack</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="MyRadioButtonRed" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlActivated">@color/colorCityRed</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>



</resources>
